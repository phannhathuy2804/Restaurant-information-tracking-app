<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/parent_layout">

    <ImageView
        android:id="@+id/hazardImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/nonCritIssuesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="@string/restaurant_activity_non_critical_issues"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/critIssuesText"
        app:layout_constraintStart_toEndOf="@+id/critIssuesText"
        app:layout_constraintTop_toTopOf="@+id/critIssuesText" />

    <TextView
        android:id="@+id/nonCritIssuesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/nonCritIssuesView"
        app:layout_constraintStart_toEndOf="@+id/nonCritIssuesView"
        app:layout_constraintTop_toTopOf="@+id/nonCritIssuesView" />

    <TextView
        android:id="@+id/inspectionDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/hazardImageView"
        app:layout_constraintTop_toBottomOf="@+id/critIssuesView" />

    <TextView
        android:id="@+id/critIssuesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="@string/restaurant_activity_critical_issues"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/hazardImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/critIssuesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="#000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/critIssuesView"
        app:layout_constraintStart_toEndOf="@+id/critIssuesView"
        app:layout_constraintTop_toTopOf="@+id/critIssuesView" />
</androidx.constraintlayout.widget.ConstraintLayout>